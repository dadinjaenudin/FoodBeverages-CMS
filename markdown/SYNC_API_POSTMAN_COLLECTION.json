            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/sync/promotions/?store_id={{store_id}}&company_id={{company_id}}&updated_since=2026-01-27T00:00:00Z",
              "host": ["{{base_url}}"],
              "path": ["api", "sync", "promotions", ""],
              "query": [
                {
                  "key": "store_id",
                  "value": "{{store_id}}"
                },
                {
                  "key": "company_id",
                  "value": "{{company_id}}"
                },
                {
                  "key": "updated_since",
                  "value": "2026-01-27T00:00:00Z"
                }
              ]
            }
          },
          "response": []
        }
      ]
