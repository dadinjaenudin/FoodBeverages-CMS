                  "key": "store_id",
                  "value": "{{store_id}}"
                },
                {
                  "key": "company_id",
                  "value": "{{company_id}}"
                },
                {
                  "key": "brand_id",
                  "value": "{{brand_id}}"
                }
              ]
            }
          },
          "response": []
